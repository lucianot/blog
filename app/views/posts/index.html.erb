<div id="posts">
	<h1>Listing posts</h1>

	<table>
	  <tr>
	    <th>Name</th>
	    <th>Title</th>
	    <th>Content</th>
	    <th></th>
	    <th></th>
	    <th></th>
	  </tr>

	<% @posts.each do |post| %>
	  <tr>
	    <td class="name"><%= post.name %></td>
	    <td class="title"><%= post.title %></td>
	    <td><%= post.content %></td>
			<td><%= post.topic %></td>
	    <td class="links"><%= link_to 'Show', post %></td>
	    <td class="links"><%= link_to 'Edit', edit_post_path(post) %></td>
	    <td class="links"><%= link_to 'Destroy', post,	:confirm => 'Are you sure?', :method => :delete %></td>
	  </tr>
	<% end %>
	</table>

	<br />

	<%= link_to 'New Post', new_post_path %>
</div>